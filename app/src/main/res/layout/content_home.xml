<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aplikasi.jadwal.shalat.nasrul.activity.HomeActivity"
    tools:showIn="@layout/activity_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_id">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/id_home_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/pertama"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/masjidmalam">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_nama_daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/namadaerah"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/tv_tanngal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Tanggal"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"/>
                    <DigitalClock
                        android:id="@+id/jamdigital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-black"
                        android:textSize="50sp"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/tv_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assalamu Alaikum"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"
                        android:layout_below="@id/jamdigital"
                        android:textSize="25sp"
                        android:padding="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/kedua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="5dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="#FFFFFF">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_arah_kabah"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/kaaba"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arah\nKiblat"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_arah_kabah"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_al_quran"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:src="@drawable/qurannn"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Al Qur'an\nDigital"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_al_quran"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/asmaulhusna"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/asma"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asmaul\nHusna"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/asmaulhusna"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/inspirasi"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:src="@drawable/lantern" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kata\nMutiara"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/inspirasi"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/kedua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#424242"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_margin="10dp">
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/jadwal"
                                android:fontFamily="monospace"
                                android:text="Jadwal Sholat"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                />
                        </TableRow>
                        <TableRow android:layout_margin="5dp">
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-black"
                                android:text="Subuh"/>
                            <TextView
                                android:id="@+id/txtSubuh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:textColor="@android:color/white"
                                android:text="@string/suuhtime" />
                            <ImageView
                                android:id="@+id/img_subuh"
                                android:src="@drawable/ic_volume_up_black_24dp"
                                ></ImageView>
                        </TableRow>
                        <TableRow android:layout_margin="5dp">
                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/dzuhur" />
                            <TextView
                                android:id="@+id/txtDzuhur"
                                android:layout_width="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/zuhurtome" />
                            <ImageView
                                android:id="@+id/img_zuhur"
                                android:src="@drawable/ic_volume_up_black_24dp"
                                ></ImageView>
                        </TableRow>
                        <TableRow android:layout_margin="5dp">
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="Ashar" />
                            <TextView
                                android:id="@+id/txtAshar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/ashartime" />
                            <ImageView
                                android:id="@+id/img_ashar"
                                android:src="@drawable/ic_volume_up_black_24dp"
                                ></ImageView>
                        </TableRow>
                        <TableRow android:layout_margin="5dp">
                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/magrib" />
                            <TextView
                                android:id="@+id/txtMaghrib"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/magribtime" />
                            <ImageView
                                android:id="@+id/img_magrhib"
                                android:src="@drawable/ic_volume_up_black_24dp"
                                ></ImageView>
                        </TableRow>
                        <TableRow android:layout_margin="5dp">
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/isya" />
                            <TextView
                                android:id="@+id/txtIsya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/isyatime" />
                            <ImageView
                                android:id="@+id/img_isya"
                                android:src="@drawable/ic_volume_up_black_24dp"

                                ></ImageView>
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Hari Ini"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardMaxElevation="30dp"
                        >
                        <View
                            android:layout_width="330dp"
                            android:layout_height="250dp"
                            android:background="@drawable/tata_cara_sholat"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:text="Tata Cara Sholat"
                            android:layout_marginTop="20dp"
                            android:textColor="#000"
                            android:layout_marginRight="20dp"
                            android:fontFamily="casual"
                            android:textSize="15dp"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/avatar"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            >
                            <android.support.v7.widget.AppCompatTextView
                                android:background="#6FCDE6"
                                android:id="@+id/btn_sholat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="25sp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="#3F51B5"
                                android:padding="10dp"
                                android:text="selengkapnya"/>
                            <com.like.LikeButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon_type="heart"
                                android:layout_marginTop="120dp"
                                android:layout_marginLeft="250dp"
                                app:icon_size="25dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardMaxElevation="30dp"
                            >
                            <View
                                android:layout_width="330dp"
                                android:layout_height="250dp"
                                android:background="@drawable/doa"/>
                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:clickable="true"
                                android:text="Doa Doa Harian"
                                android:layout_marginTop="20dp"
                                android:textColor="#000"
                                android:layout_marginRight="20dp"
                                android:fontFamily="casual"
                                android:textSize="15dp"
                                />
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/avatar"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/btn_doa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="25sp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="#ffffff"
                                    android:padding="10dp"
                                    android:text="selengkapnya"/>
                            </RelativeLayout>
                            <com.like.LikeButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon_type="heart"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="300dp"
                                android:layout_marginTop="40dp"
                                app:icon_size="25dp"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berita"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    >
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/moque"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:text="Islam Pos com"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFF"
                        android:layout_marginRight="20dp"
                        android:fontFamily="casual"
                        android:textSize="15dp"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/avatar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatTextView
                            android:background="#060001"
                            android:id="@+id/btn_berita1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#2196F3"
                            android:text="mulai baca"/>
                        <com.like.LikeButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:icon_type="heart"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="30dp"
                            app:icon_size="25dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</RelativeLayout>